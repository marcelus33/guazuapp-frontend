<AddAreaWindow>:
    name: "add_area"
    widget_count : 5
    BaseLayout:
        MDFloatLayout:
            PurpleCenteredLabel:
                text: "Add areas to entity"
                pos_hint:{'center_y': (5/root.widget_count)-coef_y}
            ProgressComponent:
                step: 2
            MDGridLayout:
                cols: 2
                padding: 19.5
                size_hint: 1, 0.172
                pos_hint:{'center_x': 0.5, 'center_y': (4/root.widget_count)-coef_y}
                PurpleIconButton:
                    icon: 'pound'
                CommonTextField:
                    size_hint_y: 1
                    id: area_name
                    hint_text: "Area name"
                    helper_text_mode: "on_error"
            PurpleButton:
                text: "Add"
                pos_hint:{'center_x': 0.5, 'center_y': (3/root.widget_count)-coef_y}
                md_bg_color: primary_color
                text_color: 1, 1, 1, 1
                on_release:
                    app.set_areas()
            PaddingLayout:
                size_hint: 1, .05
                pos_hint:{'center_x': 0.5, 'center_y': (2.42/root.widget_count)-coef_y}
                MDGridLayout:
                    canvas.before:
                        Color:
                            rgba: 245/255, 245/255, 245/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    rows: 1
                    MDLabel:
                        padding: 10, 0
                        color: primary_color
                        text: "Areas of"
            PaddingLayout:
                id: area_container_layout
                size_hint: 1, 0
                pos_hint:{'center_x': 0.5, 'center_y': (1.8/root.widget_count)-coef_y}
                MDFloatLayout:
                    canvas.before:
                        Color:
                            rgba: scroll_bg_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: area_container
                    ScrollView:
                        canvas.before:
                            Color:
                                rgba: scroll_bg_color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: scrollview
                        size_hint: 1, .9
                        pos_hint:{'center_y': .5, 'x': 0}
                        do_scroll_x: True
                        do_scroll_y: False
                        MDGridLayout:
                            id: card_area_cointainer
                            rows: 1
                            spacing: 10
                            size_hint: None, 1
            LabelButton:
                text: "Done"
                pos_hint:{'center_x': 0.5, 'center_y': (1/root.widget_count)-coef_y}
                on_release:
                    app.validate_areas()
                    root.manager.transition.direction = "left"
