<AddWhatsappWindow>:
    name: "add_whatsapp"
    widget_count : 4
    BaseLayout:
        title: "Canales"
        MDFloatLayout:
            ProgressComponent:
                step: 3

            PaddingLayout:
                size_hint: 1, None
                height: 100
                pos_hint:{'center_x': 0.5, 'center_y': (3.1/root.widget_count)-coef_y}
                ChannelsGrid:

            MDGridLayout:
                cols: 2
                padding: 19.5, 0
                spacing: 15, 0
                size_hint: 1, 0.1
                pos_hint:{'center_x': 0.5, 'center_y': (2.3/root.widget_count)-coef_y}
                NumericField:
                    id: country_code
                    hint_text: "Código de país"
                    helper_text_mode: "on_error"
                    size_hint_x: None
                    width: 100
                    limit: 3
                NumericField:
                    id: whatsapp_number
                    hint_text: "Número de Whatsapp"
                    helper_text_mode: "on_error"
                    limit: 13
            PurpleButton:
                id: next_button
                text: "Agregar"
                pos_hint:{'center_x': 0.5, 'center_y': (1.85/root.widget_count)-coef_y}
                on_release:
                    app.validate_phone()
                    root.manager.transition.direction = "left"
            PurpleButton:
                id: next_button
                text: "Omitir"
                pos_hint:{'center_x': 0.5, 'center_y': (1.45/root.widget_count)-coef_y}
                on_release:
                    root.manager.transition.direction = "left"
            LabelButton:
                id: back_button
                text: "Átras"
                pos_hint:{'center_x': 0.5, 'center_y': (1.05/root.widget_count)-coef_y}
                on_release:
                    app.enter_add_area_screen()
                    root.manager.transition.direction = "right"
