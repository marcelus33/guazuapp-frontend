#:set share_code_y -0.06
<ShareCodeWindow>:
    name: "share_code"
    widget_count : 6
    BaseLayout:
        title: "Suscripciones"
        last_right_icon: 'close'
        MDFloatLayout:
#            PurpleCenteredLabel:
#                text: "Enviar invitación de subscripción"
#                pos_hint:{'center_y': (6/root.widget_count)-coef_y}
            ProgressComponent:
                step: 5
            #
            PaddingLayout:
                id: mis_entitades_label
                size_hint: 1, .05
                pos_hint:{'center_y': (4.6/root.widget_count)-share_code_y, 'center_x': .5}
                MDGridLayout:
                    canvas.before:
                        Color:
                            rgba: app.theme_cls.bg_light
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    rows: 1
                    MDLabel:
                        padding: 10, 0
                        color: app.theme_cls.primary_color
                        text: "Mis entidades"

            PaddingLayout:
                id: entidades_container_layout
                size_hint: 1, .15
                pos_hint:{'center_x': 0.5, 'center_y': (4/root.widget_count)-share_code_y}
                MDFloatLayout:
                    canvas.before:
                        Color:
                            rgba: app.theme_cls.bg_darkest
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: 1, .15
                    ScrollView:
                        canvas.before:
                            Color:
                                rgba: app.theme_cls.bg_darkest
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: scrollview
                        size_hint: 1, .9
                        pos_hint:{'center_y': .5, 'x': 0}
                        do_scroll_x: True
                        do_scroll_y: False
                        MDGridLayout:
                            id: share_card1_container
                            rows: 1
                            spacing: 10
                            size_hint: None, 1
                            MDGridLayout:
                                cols: 1
                                size_hint_x: None
                                width: 2
            #
            PaddingLayout:
                id: areas_label
                size_hint: 1, .05
                pos_hint:{'center_y': (2.9/root.widget_count)-share_code_y, 'center_x': .5}
                MDGridLayout:
                    canvas.before:
                        Color:
                            rgba: app.theme_cls.bg_light
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    rows: 1
                    MDLabel:
                        padding: 10, 0
                        color: app.theme_cls.primary_color
                        text: "Áreas en"

            PaddingLayout:
                id: area_container_layout
                size_hint: 1, .15
                pos_hint:{'center_x': 0.5, 'center_y': (2.3/root.widget_count)-share_code_y}
                MDFloatLayout:
                    canvas.before:
                        Color:
                            rgba: app.theme_cls.bg_darkest
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: 1, 1
                    ScrollView:
                        canvas.before:
                            Color:
                                rgba: app.theme_cls.bg_darkest
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: scrollview
                        size_hint: 1, .9
                        pos_hint:{'center_y': .5, 'x': 0}
                        do_scroll_x: True
                        do_scroll_y: False
                        MDGridLayout:
                            id: share_card2_container
                            rows: 1
                            spacing: 10
                            size_hint: None, 1
                            MDGridLayout:
                                cols: 1
                                size_hint_x: None
                                width: 2
