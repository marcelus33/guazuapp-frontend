<ShareCodeWindow>:
    name: "share_code"
    widget_count : 6
    BaseLayout:
        last_right_icon: 'close'
        MDFloatLayout:
            PurpleCenteredLabel:
                text: "Share your codes of subscriptions"
                pos_hint:{'center_y': (6/root.widget_count)-coef_y}
            ProgressComponent:
                step: 5
            #
            PurpleCenteredLabel:
                text: "My entities"
                pos_hint:{'center_y': (4.6/root.widget_count)-coef_y, 'center_x': .5}
                size_hint: .3, .05
            MDFloatLayout:
                canvas.before:
                    Color:
                        rgba: scroll_bg_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: 1, .15
                pos_hint:{'center_x': 0.5, 'center_y': (3.9/root.widget_count)-coef_y}
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: scroll_bg_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: scrollview
                    size_hint: 1, .82
                    pos_hint:{'center_y': .5}
                    do_scroll_x: True
                    do_scroll_y: False
                    MDGridLayout:
                        id: share_card1_container
                        rows: 1
                        spacing: 10
                        size_hint: None, 1
            #
            PurpleCenteredLabel:
                id: areas_label
                text: "Areas of "
                pos_hint:{'center_y': (3/root.widget_count)-coef_y, 'center_x': .5}
                size_hint: .3, .05
            MDFloatLayout:
                canvas.before:
                    Color:
                        rgba: scroll_bg_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: 1, .15
                pos_hint:{'center_x': 0.5, 'center_y': (2.3/root.widget_count)-coef_y}
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: scroll_bg_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: scrollview
                    size_hint: 1, .82
                    pos_hint:{'center_y': .5}
                    do_scroll_x: True
                    do_scroll_y: False
                    MDGridLayout:
                        id: share_card2_container
                        rows: 1
                        spacing: 10
                        size_hint: None, 1
